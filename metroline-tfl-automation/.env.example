# Metroline TfL Automation - Environment Configuration
# Copy this file to .env and configure with your actual values

# Security Configuration
ENCRYPTION_KEY=your-256-bit-encryption-key-here
METROLINE_API_KEY=your-secure-api-key-here
SESSION_SECRET=your-session-secret-here

# TfL Configuration
TFL_BASE_URL=https://tfl.gov.uk/corporate/publications-and-reports/buses-performance-data
OPERATOR_CODE=ML
COMPANY_NAME=Metroline

# Operational Configuration
MAX_RETRIES=3
REQUEST_TIMEOUT=30000
DATA_RETENTION_DAYS=90

# Logging Configuration
LOG_LEVEL=info
LOG_DIRECTORY=./logs

# Network Security
ALLOWED_DOMAINS=tfl.gov.uk,cdn.tfl.gov.uk
MAX_FILE_SIZE_MB=10

# Schedule Configuration
CRON_SCHEDULE=0 9 * * 1
ENABLE_SCHEDULING=false

# Compliance Configuration
GDPR_COMPLIANCE=true
DATA_PROTECTION_OFFICER_EMAIL=dpo@metroline.co.uk
AUDIT_ENABLED=true